{
  "name": "StickIt",
  "description": "Taking notes inside a browser!",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "32": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Note Extension"
  },
  "permissions": ["storage", "tabs", "scripting", "contextMenus"],
  "options_page": "dashboard.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
